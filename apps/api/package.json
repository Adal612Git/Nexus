{
  "name": "@nexus/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:ci": "NODE_ENV=test vitest run --passWithNoTests",
    "test:watch": "NODE_ENV=test vitest watch",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force --skip-generate --skip-seed && prisma db seed",
    "lint": "eslint src --ext .ts",
    "format": "prettier -w ."
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.13",
    "supertest": "^7.0.0",
    "prisma": "^6.16.1",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9"
  }
}
