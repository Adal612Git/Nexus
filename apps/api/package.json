{
  "name": "@nexus/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.13",
    "prisma": "^6.16.1",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9"
  }
}
