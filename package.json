{
  "name": "nexus-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.9.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c auto \"pnpm --filter @nexus/api dev\" \"pnpm --filter @nexus/web dev\"",
    "api": "pnpm --filter @nexus/api dev",
    "web": "pnpm --filter @nexus/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "coverage:api": "pnpm --filter @nexus/api test -- --coverage",
    "coverage:web": "pnpm --filter @nexus/web test -- --coverage",
    "coverage:badges": "node scripts/gen-coverage-badge.mjs apps/api apps/web",
    "e2e": "playwright test",
    "lint": "eslint . --ext .ts,.js,.vue",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "concurrently": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.27.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vue-eslint-parser": "^9.4.3"
  }
}
